package oops;

class Pen
{
	//data members
	static int price=10;
	String color="red";
	String company = "cello";
	
	//function member
	public void toWrite()
	{
		//System.out.println("towrite method calling...");
		System.out.println(price+" "+color+" "+company);
	}
	
	public static void sample()
	{
		System.out.println("running sample...");
	}
}

public class O001_ClassDemo
{
	public static void main(String[] args)
	{
		Pen.price = 800;
		
		Pen p = new Pen();
		//p.price = 700;
		p.toWrite();
		
		Pen p1 = new Pen();
		p1.toWrite();
		
		Pen p2 = new Pen();
		p2.toWrite();
		
		Pen.sample();
		
	}
}
