package oops;

class Pen
{
	//data members
	int price=10;
	String color="red";
	String company = "cello";
	
	//function member
	public void toWrite()
	{
		//System.out.println("towrite method calling...");
		System.out.println(price+" "+color+" "+company);
	}
}

public class O001_ClassDemo
{
	public static void main(String[] args)
	{
		
		Pen p = new Pen();
		p.price = 700;
		p.toWrite();
		
		Pen p1 = new Pen();
		p1.toWrite();
		
		Pen p2 = new Pen();
		p2.toWrite();
		
	}
}
